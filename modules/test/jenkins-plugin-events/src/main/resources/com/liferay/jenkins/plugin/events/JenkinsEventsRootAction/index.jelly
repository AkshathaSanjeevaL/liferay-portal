<?jelly escape-by-default="true"?>

<j:jelly xmlns:f="/lib/form" xmlns:j="jelly:core" xmlns:l="/lib/layout">
	<l:layout>
		<l:side-panel>
			<l:tasks>
				<l:task href="${rootURL}/" icon="icon-md icon-up" title="Back to Dashboard" />
			</l:tasks>
		</l:side-panel>
		<l:main-panel>
			<div>
				<div>
					<h2>Jenkins Events</h2>
					<p>The specified events occur, a POST wil be made the specified URLs provided.</p>
				</div>
				<f:form method="post" name="jenkinsEventsConfiguration" action="jenkinsEventsConfiguration">
					<f:entry>
						<f:repeatable var="jenkinsPublishers" items="${it.jenkinsPublishers}">
							<h3>Jenkins Publisher</h3>
							<f:entry>
								<div align="right">
									<f:repeatableDeleteButton />
								</div>
							</f:entry>
							<f:entry title="URL">
								<f:textbox name="url" value="${jenkinsPublishers.url}" />
							</f:entry>
							<f:advanced title="Event Configurations">
								<f:section title="Build Events">
									<f:entry title="BUILD_COMPLETED">
										<f:checkbox name="buildCompleted" value="${jenkinsPublishers.buildCompleted}" checked="${jenkinsPublishers.buildCompleted}" />
									</f:entry>
									<f:entry title="BUILD_STARTED">
										<f:checkbox name="buildStarted" value="${jenkinsPublishers.buildStarted}" checked="${jenkinsPublishers.buildStarted}" />
									</f:entry>
								</f:section>
								<f:section title="Computer Events">
									<f:entry title="COMPUTER_BUSY">
										<f:checkbox name="computerBusy" value="${jenkinsPublishers.computerBusy}" checked="${jenkinsPublishers.computerBusy}" />
									</f:entry>
									<f:entry title="COMPUTER_IDLE">
										<f:checkbox name="computerIdle" value="${jenkinsPublishers.computerIdle}" checked="${jenkinsPublishers.computerIdle}" />
									</f:entry>
									<f:entry title="COMPUTER_OFFLINE">
										<f:checkbox name="computerOffline" value="${jenkinsPublishers.computerOffline}" checked="${jenkinsPublishers.computerOffline}" />
									</f:entry>
									<f:entry title="COMPUTER_ONLINE">
										<f:checkbox name="computerOnline" value="${jenkinsPublishers.computerOnline}" checked="${jenkinsPublishers.computerOnline}" />
									</f:entry>
									<f:entry title="COMPUTER_TEMPORARILY_OFFLINE">
										<f:checkbox name="computerTemporarilyOffline" value="${jenkinsPublishers.computerTemporarilyOffline}" checked="${jenkinsPublishers.computerTemporarilyOffline}" />
									</f:entry>
									<f:entry title="COMPUTER_TEMPORARILY_ONLINE">
										<f:checkbox name="computerTemporarilyOnline" value="${jenkinsPublishers.computerTemporarilyOnline}" checked="${jenkinsPublishers.computerTemporarilyOnline}" />
									</f:entry>
								</f:section>
								<f:section title="Queue Events">
									<f:entry title="QUEUE_ITEM_ENTER_BLOCKED">
										<f:checkbox name="queueItemEnterBlocked" value="${jenkinsPublishers.queueItemEnterBlocked}" checked="${jenkinsPublishers.queueItemEnterBlocked}" />
									</f:entry>
									<f:entry title="QUEUE_ITEM_ENTER_BUILDABLE">
										<f:checkbox name="queueItemEnterBuildable" value="${jenkinsPublishers.queueItemEnterBuildable}" checked="${jenkinsPublishers.queueItemEnterBuildable}" />
									</f:entry>
									<f:entry title="QUEUE_ITEM_ENTER_WAITING">
										<f:checkbox name="queueItemEnterWaiting" value="${jenkinsPublishers.queueItemEnterWaiting}" checked="${jenkinsPublishers.queueItemEnterWaiting}" />
									</f:entry>
									<f:entry title="QUEUE_ITEM_LEAVE_BLOCKED">
										<f:checkbox name="queueItemLeaveBlocked" value="${jenkinsPublishers.queueItemLeaveBlocked}" checked="${jenkinsPublishers.queueItemLeaveBlocked}" />
									</f:entry>
									<f:entry title="QUEUE_ITEM_LEAVE_BUILDABLE">
										<f:checkbox name="queueItemLeaveBuildable" value="${jenkinsPublishers.queueItemLeaveBuildable}" checked="${jenkinsPublishers.queueItemLeaveBuildable}" />
									</f:entry>
									<f:entry title="QUEUE_ITEM_LEAVE_WAITING">
										<f:checkbox name="queueItemLeaveWaiting" value="${jenkinsPublishers.queueItemLeaveWaiting}" checked="${jenkinsPublishers.queueItemLeaveWaiting}" />
									</f:entry>
									<f:entry title="QUEUE_ITEM_LEFT">
										<f:checkbox name="queueItemLeft" value="${jenkinsPublishers.queueItemLeft}" checked="${jenkinsPublishers.queueItemLeft}" />
									</f:entry>
								</f:section>
							</f:advanced>
						</f:repeatable>
					</f:entry>
					<f:entry>
						<f:submit value="Save" />
					</f:entry>
				</f:form>
			</div>
		</l:main-panel>
	</l:layout>
</j:jelly>