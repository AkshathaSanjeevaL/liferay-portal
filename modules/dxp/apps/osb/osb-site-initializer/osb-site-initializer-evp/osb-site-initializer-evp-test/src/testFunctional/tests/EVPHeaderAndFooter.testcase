@component-name = "OSB Site Initializer EVP"
definition {

	var baseURL = PropsUtil.get("portal.url");

	property custom.properties = "feature.flag.LPS-169981=true";
	property osgi.modules.includes = "osb-site-initializer-evp";
	property portal.release = "false";
	property portal.upstream = "true";
	property release.feature.flags.disable.DISABLE_PRIVATE_LAYOUTS = "true";
	property testray.main.component.name = "OSB Site Initializer EVP";

	setUp {
		task ("Set up instance and sign in") {
			TestCase.setUpPortalInstance();

			User.firstLoginPG();
		}

		task ("Create a new EVP Site") {
			EVPUtils.addEVPSite();
		}

		task ("Navigate to EVP Site and Sign In") {
			EVPUtils.gotoEVP();
		}
	}

	tearDown {
		var testPortalInstance = PropsUtil.get("test.portal.instance");

		if (${testPortalInstance} == "true") {
			PortalInstances.tearDownCP();
		}
		else {
			JSONGroup.deleteGroupByName(groupName = "EVP Portal");
		}
	}

	@description = "This is a test for LPS-161593. Verify that User can navigate around the site by clicking on Top Menu navigation tabs on page header"
	@priority = 3
	test CanNavigateToPages {
		task ("When I navigate through the pages, then I can assert them") {
			for (var pageName : list "Home,Request,Organization,Reports") {
				EVPNavigator.goToNavItem(navItem = ${pageName});

				EVPNavigator.assertActiveBreadcrumb(activeItem = ${pageName});

				var pageName = StringUtil.lowerCase(${pageName});

				AssertLocation.assertPartialLocation(value1 = ${pageName});
			}
		}
	}

}