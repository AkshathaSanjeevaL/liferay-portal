definition {

	@summary = "This calls the JSON WS API to delete all data sets"
	macro deleteAllDataSetEntriesViaAPI {
		var portalURL = JSONCompany.getPortalURL();

		if (!(isSet(userEmailAddress))) {
			var userEmailAddress = "test@liferay.com";
		}

		if (!(isSet(userPassword))) {
			var userPassword = "test";
		}

		var curl = '''
			${portalURL}/o/c/fdsentries \
				-u ${userEmailAddress}:${userPassword}
		''';

		var dataSetIdList = JSONCurlUtil.get(${curl}, "$.items..id");

		if (${dataSetIdList} != "") {
			for (var dataSetId : list ${dataSetIdList}) {
				var curl = '''
					${portalURL}/o/c/fdsentries/${dataSetId} \
						-u ${userEmailAddress}:${userPassword}
				''';

				JSONCurlUtil.delete(${curl});
			}
		}
	}

}