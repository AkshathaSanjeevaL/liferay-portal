definition {

	macro assertModalOption {
		AssertElementPresent(
			key_text = ${option},
			locator1 = "RaylifeApplicationModal#MODAL_INSURANCE");

		if (isSet(notOption)) {
			AssertElementNotPresent(
				key_text = ${notOption},
				locator1 = "RaylifeApplicationModal#MODAL_INSURANCE");
		}
	}

	macro modalFlow {
		Click(
			key_text = "Application",
			locator1 = "Button#ANY");

		Click(
			key_text = ${insurance},
			locator1 = "RaylifeApplicationModal#MODAL_OPTION");

		Click(
			key_text = "Next",
			locator1 = "Button#ANY");

		if (isSet(button)) {
			Click(
				key_text = ${button},
				locator1 = "Button#ANY");
		}

		if (isSet(product)) {
			Click(
				key_text = ${product},
				locator1 = "RaylifeApplicationModal#MODAL_OPTION");

			Click(
				key_text = "Next",
				locator1 = "Button#ANY");
		}
	}

	macro modalOption {
		Click(
			key_text = ${option},
			locator1 = "RaylifeApplicationModal#MODAL_OPTION");
	}

}